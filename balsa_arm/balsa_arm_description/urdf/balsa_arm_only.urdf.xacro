<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="balsa_arm_only" params="*origin">
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.065 0.055 0.003"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.065 0.055 0.003"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0000125" ixy="0.0" ixz="0.0" iyy="0.0000125" iyz="0.0" izz="0.0000125"/>
    </inertial>
  </link>

  <link name="upper_arm">
    <visual>
      <geometry>
        <box size="0.090 0.003 0.023"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0 0.030"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.090 0.003 0.023"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0000125" ixy="0.0" ixz="0.0" iyy="0.0000125" iyz="0.0" izz="0.0000125"/>
    </inertial>
  </link>

  <joint name="shoulder" type="revolute">
    <axis xyz="0 0 1"/>
    <limit lower="-0.2" upper="0.2" effort="2.5" velocity="1.0"/>
    <parent link="base_link"/>
    <child link="upper_arm"/>
    <origin xyz="0 0 0.025"/>
    <sensor name="force_torque" type="force_torque">
      <update_rate>30</update_rate>
      <always_on>true</always_on>
    </sensor>
  </joint>

  <link name="forearm">
    <visual>
      <geometry>
        <box size="0.110 0.003 0.023"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0.005 0.054"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.110 0.003 0.023"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0000125" ixy="0.0" ixz="0.0" iyy="0.0000125" iyz="0.0" izz="0.0000125"/>
    </inertial>
  </link>

  <joint name="elbow" type="revolute">
    <axis xyz="0 1 0"/>
    <limit lower="-0.2" upper="0.2" effort="2.5" velocity="1.0"/>
    <parent link="upper_arm"/>
    <child link="forearm"/>
    <origin xyz="0 0 0.080"/>
  </joint>

  <link name="palm">
    <visual>
      <geometry>
        <box size="0.045 0.003 0.022"/>
      </geometry>
      <origin rpy="0 1.57075 0" xyz="0 0.01 0.068"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.045 0.003 0.022"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.01"/>
      <inertia ixx="0.0000125" ixy="0.0" ixz="0.0" iyy="0.0000125" iyz="0.0" izz="0.0000125"/>
    </inertial>
  </link>

  <joint name="wrist" type="revolute">
    <axis xyz="0 1 0"/>
    <limit lower="-0.2" upper="0.2" effort="2.5" velocity="1.0"/>
    <parent link="forearm"/>
    <child link="palm"/>
    <origin xyz="0 0 0.068"/>
  </joint>

  <transmission name="tran1">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="shoulder">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor1">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="tran2">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="elbow">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor2">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="tran3">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="wrist">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
    </joint>
    <actuator name="motor3">
      <hardwareInterface>PositionJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/balsa_arm</robotNamespace>
    </plugin>
  </gazebo>
  </xacro:macro>

</robot>
